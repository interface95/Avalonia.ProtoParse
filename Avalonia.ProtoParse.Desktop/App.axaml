<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:semi="https://irihi.tech/semi"
             xmlns:converters="using:Avalonia.ProtoParse.Desktop.Converters"
             xmlns:core="using:Protobuf.Decode.Parser"
             x:Class="Avalonia.ProtoParse.Desktop.App"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  
    <Application.Resources>
        <converters:WireTypeToBrushConverter x:Key="WireTypeToBrushConverter" />
        <DataTemplate x:Key="ProtoNodeTemplate" DataType="core:ProtoDisplayNode">
            <Grid ColumnDefinitions="Auto, Auto, *">
                 <Border Grid.Column="0" MinWidth="28" Height="25" CornerRadius="12" Background="#E6E8FA" Margin="0,0,10,0">
                     <TextBlock Text="{Binding FieldDisplay}" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="4,0"/>
                 </Border>
                 <TextBlock Grid.Column="1" Text="{Binding WireTypeDisplay}" VerticalAlignment="Center" Margin="0,0,10,0"
                            Foreground="{Binding WireType, Converter={StaticResource WireTypeToBrushConverter}}"/>
                 <TextBlock Grid.Column="2" Text="{Binding Summary}" VerticalAlignment="Center" Margin="0,0,5,0" TextTrimming="CharacterEllipsis"/>
            </Grid>
        </DataTemplate>
    </Application.Resources>

    <Application.Styles>
        <semi:SemiTheme />
        <semi:AvaloniaEditSemiTheme />
        <semi:TreeDataGridSemiTheme />
        <StyleInclude Source="avares://Avalonia.ProtoParse.Desktop/Themes/Fluent.axaml"/>
    </Application.Styles>
</Application>